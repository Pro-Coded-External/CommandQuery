<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net461</TargetFrameworks>
    <Version>1.0.0</Version>
    <PackageReleaseNotes>
☑️ Now published as a separate package
☑️ Removed GenericContainerExtensions
  ☑️ Extension methods for IServiceCollection from Microsoft.Extensions.DependencyInjection.Abstractions should be sufficient
    </PackageReleaseNotes>
    <Authors>Henrik Lau Eriksson</Authors>
    <Description>Dependency Injection for CommandQuery</Description>
    <PackageId>CommandQuery.DependencyInjection</PackageId>
    <PackageProjectUrl>https://github.com/hlaueriksson/CommandQuery</PackageProjectUrl>
    <PackageIcon>icon.png</PackageIcon>
    <PackageTags>CommandQuery;Command;Query;CQS</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/hlaueriksson/CommandQuery.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\icon.png" Link="icon.png" Pack="true" PackagePath="\" />
  </ItemGroup>

  <Import Project="../../Analyzers.props" />

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="2.2.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\CommandQuery\CommandQuery.csproj" />
  </ItemGroup>

</Project>